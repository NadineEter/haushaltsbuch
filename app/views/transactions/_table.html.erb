<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Amount</th>
      <th>User</th>
      <th>Date</th>
      <th>Comment</th>
       <th>Account</th>
      <th>Income</th>
      <th>Category</th>
     
      
      <th>

        <% if params[:sorting] == "date" %>
          Date ^
        <% else %>
          <%= link_to "Date", transactions_path(sorting: "date") %>
        <% end %>
        </th>


        

      <th></th>
    </tr>
  </thead>



  <tbody>



    <% transaction.each do |transaction| %>
      <tr>


        

        <td class="<%= css_class %>"><%= link_to transaction.name, edit_transaction_path(transaction) %></td>
        <td> <%= transaction.user.username %> </td>

        <td><%= transaction.Amount %></td>


       
<td><%= transaction.Date %></td>
        

<td><%= transaction.Comment %></td>
        
<td><%= transaction.Account %></td>

<td>
          <%= form_for task do |f| %>
          <%= f.check_box :done, class: "checkable" %>
          <% end %>
        </td>

        <td><%= transaction.Category %></td>

        <td><%= link_to 'Destroy', transaction, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>



      </tr>
    <% end %>





  </tbody>
</table>